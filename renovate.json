{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "ðŸ“¦ Renovate Dependency Dashboard",
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^\\.github/workflows/.*\\.ya?ml$/"
      ],
      "matchStrings": [
        "esphome-version:\\s*\\n(?:[ \\t]*- stable\\n)?(?<depValues>([ \\t]*- (?<currentValue>\\d+\\.\\d+\\.\\d+)\\n)+)"
      ],
      "depNameTemplate": "ghcr.io/esphome/esphome",
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^\\.github/workflows/.*\\.ya?ml$/"
      ],
      "matchStrings": [
        "esphome-version:\\s+(?<currentValue>\\d+\\.\\d+\\.\\d+)"
      ],
      "depNameTemplate": "ghcr.io/esphome/esphome",
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/.*\\.ya?ml$/"
      ],
      "matchStrings": [
        "source:\\s+github://the78mole/esphome_components@(?<currentValue>[^\\s\\n]+)"
      ],
      "depNameTemplate": "the78mole/esphome_components",
      "datasourceTemplate": "github-releases"
    }
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "ghcr.io/esphome/esphome"
      ],
      "matchDatasources": [
        "docker"
      ],
      "groupName": "ESPHome Versionsupdate",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    },
    {
      "matchPackageNames": [
        "the78mole/esphome_components"
      ],
      "matchDatasources": [
        "github-releases"
      ],
      "groupName": "ESPHome Components Update",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "major"
      ]
    }
  ]
}
